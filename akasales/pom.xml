<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>br.com.akasystem</groupId>
		<artifactId>v1</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../</relativePath> <!-- lookup parent from repository -->
	</parent>
	<artifactId>akasales</artifactId>
	<name>akasales</name>
	<description>sales module for the aka system project</description>
	<packaging>war</packaging>
	<properties>
		<java.version>1.8</java.version>
		<akasystemv1-core.version>0.0.1-SNAPSHOT</akasystemv1-core.version>
	</properties>
	<dependencies>
		<dependency>
			<groupId>br.com.akasystem</groupId>
			<artifactId>core</artifactId>
			<version>${akasystemv1-core.version}</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>akasales</finalName><!-- Nome gerado no jar -->
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<executable>true</executable>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
